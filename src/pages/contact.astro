---
import "../css/styles.css";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import Font from "../components/Font.astro";
import Seo from "../components/Seo.astro";

const title = "Contact • Scottish Youth Film Foundation";
const description =
  "Get in contact with the Scottish Youth Film Foundation. If you are coming to visit us in-office or need to physically send something to us, you’ll find our office address here. You can also send SYFF an email enquiry from this page.";
const permalink = "https://syff.scot/contact/";
const image = "https://syff.scot/img/syff-social-share.png";
const alt = "Scottish Youth Film Foundation";
const type = "article";
---

<html lang="en-GB">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <Font />

    <Seo
      title={title}
      description={description}
      permalink={permalink}
      image={image}
      alt={alt}
      type={type}
    />
  </head>
  <body id="top">
    <Navigation />

    <main id="content">
      <section class="container narrow">
        <h1 class="headline">Contact</h1>

        <p>
          <strong>Scottish Youth Film Foundation</strong><br />
          146 Duddingston Road West<br />
          Edinburgh, EH16 4AP
        </p>

        <p><a href="mailto:info@syff.scot">info@syff.scot</a></p>
      </section>
    </main>

    <Footer />
  </body>
</html>
