---
import sprites from "../img/syff-sprites.svg";
---

<footer class="container">
  <div class="wrapper">
    <div class="social">
      <a
        href="https://www.instagram.com/scottishyouthfilmfoundation/?hl=en"
        target="_blank"
        ><svg class="icon">
          <use xlink:href={`${sprites}#instagram`}></use>
        </svg></a
      >
      <a href="https://twitter.com/thisissyff?lang=en" target="_blank"
        ><svg class="icon">
          <use xlink:href={`${sprites}#twitter`}></use>
        </svg></a
      >
      <a
        href="https://www.facebook.com/scottishyouthfilmfoundation/"
        target="_blank"
        ><svg class="icon">
          <use xlink:href={`${sprites}#facebook`}></use>
        </svg></a
      >
    </div>

    <div class="oscr">
      <img src="/img/small-green.png" alt="OSCR Scottish Charity Regulator" />
    </div>

    <div class="logo">
      <a href="#top" title="back to top">
        <img
          src="/img/syff-favicon.svg"
          width="64"
          height="64"
          alt="Scottish Youth Film Foundation"
        />
      </a>
    </div>
  </div>

  <div class="copyright">
    Copyright Â© <span id="copyright-year">2000</span> Scottish Youth Film Foundation.
    All rights reserved.
  </div>
</footer>

<style>
  footer {
    --container-padding: 2rem;
    --container-margin: 0;
    background-color: var(--color-dark-blue);
    color: var(--color-light-grey);
    font-weight: 500;
    position: sticky;
    top: 100%;
  }

  .wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .wrapper > div {
    flex: 1;
  }

  .copyright {
    text-align: center;
    padding-top: 2rem;
    margin-top: 2rem;
    font-size: 0.875rem;
    border-top: 1px solid rgba(255 255 255 / 20%);
  }

  .oscr {
    max-width: 8rem;
  }

  .logo {
    text-align: right;
  }

  a {
    display: inline-block;
    opacity: 1;
    transition: opacity var(--transition-time);
  }

  a:hover {
    opacity: var(--hover-opacity);
  }

  .social a {
    margin-right: 0.25rem;
  }

  svg {
    fill: var(--color-light-grey);
    width: 2rem;
    height: 2rem;
  }
</style>

<script>
  document.getElementById("copyright-year").innerHTML = new Date()
    .getFullYear()
    .toString();
</script>
